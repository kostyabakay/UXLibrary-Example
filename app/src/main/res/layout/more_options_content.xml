<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/realwearTheme_backgroundColor">

    <com.realwear.ux.view.CommandButton
        android:id="@+id/option2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:text="@string/option_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.realwear.ux.view.CommandButton
        android:id="@+id/option3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:text="@string/option_3"
        app:layout_constraintEnd_toEndOf="@+id/option2Button"
        app:layout_constraintStart_toStartOf="@+id/option2Button"
        app:layout_constraintTop_toBottomOf="@+id/option2Button" />
</androidx.constraintlayout.widget.ConstraintLayout>
